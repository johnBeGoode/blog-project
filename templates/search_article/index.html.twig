{% extends 'base.html.twig' %}

{% block title %}Votre recherche{% endblock %}

{% block body %}
    <h1 class="m-3">Résultat de votre recherche :</h1>

    {% for article in articlesResult %}
        <a href=" {{ path("app_show_article", {id:article.id}) }}" class="text-decoration-none text-reset">
            <article class="d-flex align-items-center m-5 w-75 border rounded-4">
                <div class="m-2">
                    <img src="{{ asset("images/" ~ article.image) }}" alt="Image-par-défaut" width="100" height="80">
                </div>
                <div class="p-2">
                    <div class="fw-bold fs-4">{{ article.title }}</div>
                    <div>{{ article.content|u.truncate(200, ' ...') }}</div>
                </div>
            </article>
        </a>
    {% endfor %}
{% endblock %}
